---
import { getCollection } from 'astro:content';

import { AboutMeContact } from '@/features/AboutMe/AboutMeContact';
import { AboutMeContent } from '@/features/AboutMe/AboutMeContent';
import { AboutMeHeader } from '@/features/AboutMe/AboutMeHeader';
import Base from '@/features/shared/Base.astro';
import { AppConfig } from '@/utils/AppConfig';
import { getReviewTypeFromUrl, sortReviewsByRating } from '@/utils/helpers';

const title = `About Me | ${AppConfig.site_name}`;
const description = "More about me - Sa'id Kharboutli";

const reviews = await getCollection('reviews');

const movies = sortReviewsByRating(
  reviews.filter((review) => getReviewTypeFromUrl(review.slug) === 'movies')
);
const shows = sortReviewsByRating(
  reviews.filter((review) => getReviewTypeFromUrl(review.slug) === 'tv-shows')
);
const albums = sortReviewsByRating(
  reviews.filter((review) => getReviewTypeFromUrl(review.slug) === 'albums')
);
const games = sortReviewsByRating(
  reviews.filter((review) => getReviewTypeFromUrl(review.slug) === 'games')
);
---

<Base head={{ title, description }}>
  <AboutMeHeader />

  <AboutMeContent movies={movies} shows={shows} albums={albums} games={games} />

  <AboutMeContact client:load />
</Base>
