---
import { BlogCardSpotlight } from '@/components/BlogCard/BlogCardSpotlight';
import { BlogGallery } from '@/components/BlogCard/BlogGallery';
import { GradientText } from '@/components/GradientText';
import { NewerOlderPagination } from '@/components/NewerOlderPagination';
import { Section } from '@/components/Section';
import { CTA } from '@/partials/CTA';
import Base from '@/templates/Base.astro';
// eslint-disable-next-line prettier/prettier
import type { FrontMatterPostPage, IFrontMatterPost } from '@/types/IFrontMatterPost';
// eslint-disable-next-line prettier/prettier
import { AppConfig } from '@/utils/AppConfig';
import { sortPostsByDate } from '@/utils/helpers';

interface GetStaticPaths {
  paginate: any;
};

interface Props {
  page: FrontMatterPostPage;
}

export async function getStaticPaths({ paginate }: GetStaticPaths) {
  const allPosts = await Astro.glob<IFrontMatterPost>('./**/*.md');
  const sortedPosts = sortPostsByDate(allPosts);

  return paginate(sortedPosts, { pageSize: 10 });
}

const { page } = Astro.props as Props;
const title = `Blog | ${AppConfig.site_name}`;
const description =
  'Pagination example built with Astro styled with Tailwind CSS.';
---

<Base head={{ title, description }}>
  <Section>
    <div class="text-center">
      <h1 class="text-3xl font-bold">All <GradientText>Blog Posts</GradientText></h1>
    </div>
    <div class="mt-2 flex flex-row justify-center gap-4 text-center text-xs">
      <a href="/blog/topics/" class="transition-all duration-150 hover:text-purple-400 hover:scale-110">
        Topics
      </a>â€¢
      <a href="/blog/tags/" class="transition-all duration-150 hover:text-purple-400 hover:scale-110">
        Tags
      </a>
    </div>
  </Section>

  <Section>
    <BlogCardSpotlight instance={page.data[0]!} />
  </Section>

  <Section>
    <BlogGallery postList={page.data.slice(1)} />
  </Section>

  <Section>
    <NewerOlderPagination page={page} />
  </Section>

  <CTA client:load />
</Base>